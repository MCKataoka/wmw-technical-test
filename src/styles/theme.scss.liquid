/**
  Hiding the header
 **/
.in-page-link.visually-hidden.skip-link {
  display: none;
}
#shopify-section-site-header {
  display: none;
}

/**
    Styling for featured-collection
   **/

.featured-collection {
  /**
      These two classes are for hiding and displaying things in desktop or mobile
    **/
  .desktop {
    display: none !important;
  }
  .mobile {
    display: flex !important;
  }

  h2 {
    text-align: center;
    font-family: -apple-system, blinkmacsystemfont, "San Francisco", "Helvetica",
      sans-serif;
    color: rgb(0, 51, 102);
    font-size: 24px;
    font-weight: bold;
    letter-spacing: 0;
    line-height: 29px;
  }

  p {
    text-align: center;
    font-family: -apple-system, blinkmacsystemfont, "San Francisco", "Helvetica",
      sans-serif;
    color: rgb(155, 155, 155);
    font-size: 14px;
    font-weight: 300;
    letter-spacing: 0;
    line-height: 21px;
    &.subheading {
      margin-bottom: 41px;
      max-width: 306px;
      margin: 0 auto 28px;
    }
  }

  .swiper-container {
    height: 620px;
  }

  a.product-card {
    /**
        These two classes are for hiding and displaying things in desktop or mobile
      **/
    &:hover {
      img {
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.11), 0 2px 2px rgba(0, 0, 0, 0.11),
          0 4px 4px rgba(0, 0, 0, 0.11), 0 8px 8px rgba(0, 0, 0, 0.11),
          0 16px 16px rgba(0, 0, 0, 0.11), 0 32px 32px rgba(0, 0, 0, 0.11);
      }
    }
    text-decoration: none;

    p,
    span {
      color: rgb(0, 51, 102);
      font-size: 18px;
      font-weight: bold;
      letter-spacing: 0;
      line-height: 26px;
      text-align: left;
    }

    p {
      margin: 18px 0;
    }

    span {
      color: rgb(155, 155, 155);
      font-weight: 300;
    }

    img {
      position: relative;
      left: 50%;
      transform: translateX(-50%);
    }

    div.sale {
      position: relative;
      max-width: 306px;
      margin: 0 auto;
    }

    .button__sale {
      color: rgb(255, 255, 255);
      font-family: -apple-system, blinkmacsystemfont, "San Francisco",
        "Helvetica", sans-serif;
      font-size: 14px;
      font-weight: bold;
      letter-spacing: 0;
      line-height: 17px;
      text-align: center;
      position: absolute;
      top: 10px;
      right: 10px;
      z-index: 1;
      width: 56px;
      padding: 5px 0;
      background-color: rgb(0, 51, 102);
    }

    div.product-card__name-price {
      max-width: 306px;
      margin: 0 auto;
    }
  }

  .swiper-container-horizontal > .swiper-pagination-bullets {
    bottom: 0;
    .swiper-pagination-bullet.swiper-pagination-bullet-active {
      opacity: 1;
      background: #333;
    }

    .swiper-pagination-bullet {
      background: #d1d1d1;
      opacity: 1;
    }
  }

  .button__view-collection {
    max-width: 135px;
    width: 100%;
    margin: 0 auto;
    background-color: #036;
    color: #fff;
    font-family: -apple-system, blinkmacsystemfont, "San Francisco", "Helvetica",
      sans-serif;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0;
    line-height: 23px;
    text-align: center;
    padding: 6px 0;
    cursor: pointer;
    margin-top: 30px;
  }

  span.product-card__add-to-cart {
    display: none;
  }

  @media (min-width: 768px) {
    h2 {
      font-size: 36px;
      line-height: 44px;
    }
    p {
      font-size: 18px;
      line-height: 26px;
      &.subheading {
        max-width: 590px;
        margin: 0 auto 41px;
      }
    }
    .button__view-collection {
      max-width: 175px;
      font-size: 18px;
      padding: 16px 0;
      margin-top: 47px;
    }
    .desktop {
      display: flex !important;
    }
    .mobile {
      display: none !important;
    }
    .swiper-button-next,
    .swiper-button-prev {
      top: 37%;
      color: rgb(155, 155, 155);
    }
    .swiper-container {
      max-width: 97%;
    }

    a.product-card {
      div,
      div.product-card__name-price {
        max-width: 88.75%;
        margin: 0 auto;
      }
      div.product-card__name-price {
        max-width: 306px;
        margin: 0 auto;
      }
      img {
        left: 0;
        max-width: 100%;
        transform: translateX(0);
      }
      p {
        font-size: 21px;
        margin: 16px 0 6px;
      }
    }
  }
}
